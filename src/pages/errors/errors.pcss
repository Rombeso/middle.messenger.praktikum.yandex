.error {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    row-gap: 20px;

    &__title {
        font-weight: 500;
        font-size: 40px;
    }

    &__text {
        font-weight: 500;
        font-size: 20px;
    }

    &__link {
        font-weight: 500;
        font-size: 11px;
        color: var(--blue);
        margin-top: 50px;
    }
}