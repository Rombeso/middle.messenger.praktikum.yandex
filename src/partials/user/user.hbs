<div class='user'>
    <div class='user__avatar'>
        <a class='user__change' href='/'>Change avatar</a>
        <img
                src='./../../assets/default-avatar.png'
                alt='avatar'
                class='user__image'
        />

        <h3>Name</h3>
    </div>

    <div class='user__data'>
        {{#each profile}}
            {{> 'profileItem/profileItem' this}}
        {{/each}}
    </div>

    <div class='user__actions'>
        <div class='actionItem'>
            <a class='actionItem__title' href='/'>Change user data</a>
        </div>
        <div class='actionItem'>
            <a class='actionItem__title' href='/'>Change password</a>
        </div>
        <div class='actionItem'>
            <a
                    class='actionItem__title actionItem__title_warning'
                    href='/'
            >Log out</a>
        </div>
    </div>
</div>

